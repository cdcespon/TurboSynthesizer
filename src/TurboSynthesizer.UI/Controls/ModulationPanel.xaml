<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:TurboSynthesizer.Core.Modulation;assembly=TurboSynthesizer.Core"
             x:Class="TurboSynthesizer.UI.Controls.ModulationPanel">
    <Grid RowDefinitions="Auto,*">
        <Label Text="MODULATION" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource White}" HorizontalOptions="Center" Margin="0,0,0,10"/>
        
        <CollectionView Grid.Row="1" ItemsSource="{Binding ModulationRoutes}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="core:ModulationRoute">
                    <Grid ColumnDefinitions="2*,2*,3*" Padding="0,5">
                        <Label Text="{Binding Source}" TextColor="{StaticResource Gray400}" VerticalOptions="Center" FontSize="12"/>
                        <Label Text="{Binding Destination}" Grid.Column="1" TextColor="{StaticResource Gray400}" VerticalOptions="Center" FontSize="12"/>
                        <Slider Value="{Binding Amount}" Minimum="-1" Maximum="1" Grid.Column="2" ThumbColor="{StaticResource Primary}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
